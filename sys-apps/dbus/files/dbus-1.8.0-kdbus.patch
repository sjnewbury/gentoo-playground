+	const struct kdbus_item *item;
+	int ret_size = 0;
+	DBusMessage *message = NULL;
+	DBusMessageIter args;
+	const char* emptyString = "";
+	const char* pString = NULL;
+	char dbus_name[128];
+	const char* pDBusName = dbus_name;
