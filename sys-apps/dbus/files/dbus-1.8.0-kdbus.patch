+static const DBusTransportVTable kdbus_vtable = {
+  transport_finalize,
+  kdbus_handle_watch,
+  kdbus_disconnect,
+  kdbus_connection_set,
+  kdbus_do_iteration,
+  kdbus_live_messages_changed,
