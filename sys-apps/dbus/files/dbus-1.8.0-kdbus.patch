+					item->name_change.new_id, item->name_change.old_flags,
+					item->name_change.new_flags);
+
+				message = dbus_message_new_signal(DBUS_PATH_DBUS, DBUS_INTERFACE_DBUS, "NameOwnerChanged"); // name of the signal
+				if(message == NULL)
+				{
+					ret_size = -1;
