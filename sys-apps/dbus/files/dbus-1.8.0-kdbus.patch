+
+			case KDBUS_ITEM_NAME_REMOVE:
+				_dbus_verbose("  +%s (%llu bytes) '%s', old id=%lld, new id=%lld, old flags=0x%llx, new flags=0x%llx\n",
+					enum_MSG(item->type), (unsigned long long) item->size,
